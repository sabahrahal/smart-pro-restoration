---
// Import the necessary components
import MainLayout from "../layouts/MainLayout.astro";
import ContactSection from "../components/sections/ContactSection.astro";
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title="Contact | Smart Pro Restoration"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://smartprorestoration.com/contact",
    "url": "https://smartprorestoration.com/contact",
    "name": "Contact Us | Smart Pro Restoration",
    "description":
      "Reach out to us today! Whether you have questions about our services or want to schedule a consultation, our team in Florida is here to assist you. Contact us now for personalized solutions tailored to your restoration and cleaning needs.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://smartprorestoration.com",
      "name": "Smart Pro Restoration & Cleaning",
      "description":
        "Discover top-quality restoration & cleaning services in Florida.",
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>
